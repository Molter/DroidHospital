<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_principio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/nenhum_medicamento_encontrado"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_fantasia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fantasia"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_concentracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="conce"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_forma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forma"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_laboratorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="labora"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>